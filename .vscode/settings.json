{
  // general configuration--------------------------------------
  "window.zoomLevel": 0,
  // "files.autoSave": "onWindowChange",
  "stylelint.packageManager": "yarn",
  "breadcrumbs.enabled": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "javascript.updateImportsOnFileMove.enabled": "never",
  "extensions.ignoreRecommendations": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/venv": true
  },
  //------------------------------------------------------------

  // git len configuration--------------------------------------
  "git.enableSmartCommit": true,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  //-------------------------------------------------------------

  // workbench configuration-------------------------------------
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Dracula",
  "workbench.activityBar.visible": true,
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",
  //-------------------------------------------------------------

  // Editor configuration-----------------------------------------
  "editor.wordWrap": "on",
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 17,
  "editor.fontLigatures": true,
  "editor.lineHeight": 24,
  "editor.tabSize": 2,
  "editor.rulers": [80, 120],
  "editor.renderLineHighlight": "gutter",
  "editor.renderIndentGuides": false,
  "editor.suggestSelection": "first",
  "editor.parameterHints.enabled": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  //--------------------------------------------------------------

  // Terminal configuration---------------------------------------
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.shell.osx": "/bin/zsh",
  //--------------------------------------------------------------

  // Emmet configuration------------------------------------------
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  //--------------------------------------------------------------

  // prettier configuration--------------------------------------------
  "prettier.useEditorConfig": true,
  "prettier.packageManager": "yarn",
  //------------------------------------------------------------------------

  // python configuration---------------------------------------------------
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "yapf",
  "python.formatting.yapfArgs": ["--style=${workspaceFolder}/.style.yapf"],
  "python.linting.pylintUseMinimalCheckers": false,
  "python.linting.pylintCategorySeverity.warning": "Hint",
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.languageServer": "Microsoft",
  //------------------------------------------------------------------------

  // Sync configuration-------------------------------------------
  "sync.autoDownload": false,
  "sync.autoUpload": true,
  "sync.quietSync": true,
  "sync.forceDownload": true,
  "sync.forceUpload": true,
  "sync.gist": "ee0f6e17f064beb3f7a118b514cc161f",
  //---------------------------------------------------------------

  // cSpeel configuration---------------------------------------------
  "cSpell.language": "pt,en,en-GB,en-US",
  "cSpell.enabled": true,
  "editor.renderControlCharacters": true,
  "python.pythonPath": "/usr/bin/python3",
  "liveServer.settings.donotShowInfoMsg": true
  //-----------------------------------------------------------------
}
